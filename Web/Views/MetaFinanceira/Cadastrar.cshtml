@model MetaFinanceira

<form id="formCadastrarMeta" onsubmit="metafinanceira.Cadastrar()">

        <div class="border-bottom border-3 border-secondary mt-5">
            <h3 class="text-white-50">Criar nova meta</h3>
        </div>
        <div class="form-group">
            <label class="col-form-label mt-4" for="inputDefault">Nome</label>
            <input type="text" class="form-control" placeholder="Qual será o nome da sua nova meta financeira?" id="inputDefault">
        </div>
        <div class="form-group">
            <label for="exampleTextarea" class="form-label mt-4">Descrição</label>
            <textarea class="form-control" id="exampleTextarea" rows="3" placeholder="Qual o objetivo da sua meta? Faça uma breve descrição..."></textarea>
        </div>        
        <div class="form-group">
        <label class="form-label mt-4">Valor Meta</label>
        <div class="form-group">
            <div class="input-group mb-3">
            <span class="input-group-text">R$</span>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="Qual valor você quer juntar no total?">
            <span class="input-group-text">.00</span>
            </div>
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-success" style="width:150px">Criar</button>
            <a asp-controller="MetaFinanceira" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Voltar
            </a>
        </div>
</form>
